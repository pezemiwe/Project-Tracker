# Database
DATABASE_URL="postgresql://app_user:password@localhost:5432/donor_oversight"

# Redis
REDIS_URL="redis://:password@localhost:6379"

# MinIO (S3-compatible storage)
MINIO_ENDPOINT="localhost:9000"
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="attachments"

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-here-change-in-production"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-here-change-in-production"

# SMTP Email
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="noreply@donor-oversight.local"
SMTP_PASSWORD="smtp-password"
SMTP_FROM="Donor Oversight <noreply@donor-oversight.local>"

# ClamAV Virus Scanning
CLAMAV_HOST="localhost"
CLAMAV_PORT=3310

# Application
NODE_ENV="development"
PORT=3000
LOG_LEVEL="info"
FRONTEND_URL="http://localhost:5173"

# Session Management
SESSION_IDLE_MINUTES=30
SESSION_ABSOLUTE_HOURS=8

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW_MS=60000
