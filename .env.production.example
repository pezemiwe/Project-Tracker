# Production Environment Variables
# Copy this file to .env and fill in the values

# Database
POSTGRES_DB=donor_oversight
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>

# Redis
REDIS_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>

# MinIO (S3-compatible object storage)
MINIO_ROOT_USER=<CHANGE_ME_USERNAME>
MINIO_ROOT_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>

# Backend
NODE_ENV=production
JWT_SECRET=<CHANGE_ME_LONG_RANDOM_STRING>
SESSION_SECRET=<CHANGE_ME_LONG_RANDOM_STRING>
FRONTEND_URL=https://donor-oversight.example.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

# SSL/TLS (if using HTTPS)
# Place your SSL certificate and key in ./ssl/ directory
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Email (SMTP) - Configure via admin settings UI after deployment
# Or seed them in the database using the settings service

# Deployment
COMPOSE_PROJECT_NAME=donor-oversight

# Optional: Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
